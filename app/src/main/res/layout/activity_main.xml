<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#55ABCA"
            android:text="%"
            android:textSize="22sp" />

        <Button
            android:id="@+id/squareRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#55ABCA"
            android:text="âˆš"
            android:textSize="22sp" />

        <Button
            android:id="@+id/plusMinus"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#55ABCA"
            android:text="+/-"
            android:textSize="22sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/equalsButton">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="1"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="2"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="3"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#00BCFF"
                android:onClick="operationClick"
                android:text="*"
                android:textSize="30sp">

            </Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="4"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="5"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="6"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#D6005D"
                android:onClick="operationClick"
                android:text="-"
                android:textSize="30sp">

            </Button>
        </TableRow>
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="7"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="8"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="9"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#00BCFF"
                android:onClick="operationClick"
                android:text="+"
                android:textSize="30sp">

            </Button>
        </TableRow>
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/clear_text"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#0055FF"
                android:onClick="operationClick"
                android:text="C"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"


                android:layout_weight="1"
                android:backgroundTint="#88FF00"
                android:onClick="numberClick"
                android:text="0"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#0055FF"
                android:onClick="numberClick"
                android:text="."
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_height="100dp"

                android:layout_weight="1"
                android:backgroundTint="#D6005D"
                android:onClick="operationClick"
                android:text="/"
                android:textSize="30sp">

            </Button>
        </TableRow>
        >
    </TableLayout>

    <Button
        android:id="@+id/equalsButton"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#03DAC5"
        android:onClick="operationClick"
        android:text="="
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>